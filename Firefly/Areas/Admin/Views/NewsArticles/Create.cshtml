@model Firefly.Areas.Admin.Models.ArticlesModel

@{
    ViewBag.Title = "Thêm mới tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Thêm mới tin tức
}

@section jsFooter{
        <script>
                $(document).ready(function () {
                    $('#btnChoose').on('click', function (e) {
                        e.preventDefault();
                        var finder = new CKFinder();
                        finder.selectActionFunction = function (url) {
                            $('#txtPhotoUrl').val(url);
                        };
                        finder.popup();
                    })
                })
        </script>
    }
<script src="/assets/admin/js/Plugin/ckeditor/ckeditor.js"></script>
<script src="/assets/admin/js/Plugin/ckfinder/ckfinder.js"></script>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Nhập thông tin
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-8">
                        @using (Html.BeginForm("Create", "NewsArticles", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.LabelFor(model => model.newsCategoryID, htmlAttributes: new { @class = "control-label col-md-3" })
                                @Html.DropDownListFor(model => model.newsCategoryID, ViewBag.ListCategories as SelectList, new {@class = "form-control col-lg-4" }) 
                                @Html.ValidationMessageFor(model => model.newsCategoryID, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.headline, htmlAttributes: new { @class = "control-label col-md-3" })
                                @Html.TextBoxFor(model => model.headline, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.headline, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.extract, htmlAttributes: new { @class = "control-label col-md-3" })
                                @Html.TextBoxFor(model => model.extract, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.extract, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.encoding, htmlAttributes: new { @class = "control-label col-md-3" })
                                @Html.TextBoxFor(model => model.encoding, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.encoding, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.tags, htmlAttributes: new { @class = "control-label col-md-3" })
                                @Html.TextBoxFor(model => model.tags, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.tags, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.priority, htmlAttributes: new { @class = "control-label col-md-3" })
                                @Html.TextBoxFor(model => model.priority, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.priority, "", new { @class = "text-danger" })
                            </div>
                            

                            <div class="form-group">
                                @Html.LabelFor(model => model.byLine, htmlAttributes: new { @class = "control-label col-md-3" })
                                @Html.TextBoxFor(model => model.byLine, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.byLine, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.source, htmlAttributes: new { @class = "control-label col-md-3" })
                                @Html.TextBoxFor(model => model.source, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.source, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.photoURL, htmlAttributes: new { @class = "control-label col-md-4" })
                                @Html.TextBoxFor(model => model.photoURL, new { @class = "form-control", @id = "txtPhotoUrl" })
                                <a id="btnChoose" href="#">Chọn ảnh</a>
                                @Html.ValidationMessageFor(model => model.photoURL, "", new { @class = "text-danger" })
                              
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.text, htmlAttributes: new { @class = "control-label" })
                                @Html.TextAreaFor(model => model.text, new { @class = "form-control", @id = "txtContent" })
                                @Html.ValidationMessageFor(model => model.text, "", new { @class = "text-danger" })
                                <script>CKEDITOR.replace("txtContent");</script>

                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Thêm mới" class="btn btn-default" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
